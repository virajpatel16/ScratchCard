<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFE5E5"
    android:paddingBottom="@dimen/_50sdp"
    tools:context=".DailyrewardFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#FF3333">


        <TextView
            android:id="@+id/refferalback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Reward"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_8sdp"
        android:elevation="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/dailyreward"
        android:layout_height="@dimen/_200sdp"
        android:layout_margin="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dailyreward"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_22sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Daily Reward"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="700 POINTS"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center|top"
                android:layout_marginTop="@dimen/_28sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/coins" />


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/BTN_NO"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_16sdp"

            android:backgroundTint="@color/white"
            android:text="CLAIM REWARD"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_29sdp"
            app:elevation="0dp"

            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EARN MORE"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:drawableLeft="@drawable/round_looks_one_20"
        android:drawablePadding="@dimen/_10sdp"
        android:text="Click On reward button and watch ad to claim\n the reward" />

    <TextView
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/round_looks_two_20"
        android:layout_margin="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:text="Install Playing AD and  play game for 30sec to get 200 points more"
        android:layout_height="wrap_content"/>
</LinearLayout>